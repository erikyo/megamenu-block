{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
    "name": "megamenu/menu",
    "title": "Mega Menu",
    "category": "layout",
	"icon": "menu",
	"allowedBlocks": [
		"megamenu/menu-item",
		"codekraft/oh-my-svg",
		"core/group",
		"core/heading",
		"core/paragraph",
		"core/site-logo",
		"core/social-link"
	],
	"attributes": {
		"align": {
			"type": "string",
			"default": "center"
		},
		"menuAlign": {
			"type": "string",
			"default": "right"
		},
		"activator": {
			"type": "string",
			"default": "hover"
		},
		"menusMinWidth": {
			"type": "number",
			"default": 0
		},
        "dropdownMaxWidth": {
            "type": "number",
            "default": 0
        },
        "collapseOnMobile": {
            "type": "boolean",
            "default": true
        },
        "responsiveBreakpoint": {
            "type": "number",
            "default": 1023
        },
		"expandDropdown": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"align": true,
		"className": true,
		"color": {
			"gradients": true,
			"heading": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"dimensions": {
			"width": true,
			"minHeight": false
		},
		"position": {
			"sticky": true
		},
		"shadow": {
			"__experimentalSkipSerialization": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"reusable": false,
		"lightBlockWrapper": false
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-view.css",
	"viewScript": "file:./view.js"
}
