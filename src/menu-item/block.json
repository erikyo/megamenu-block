{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "megamenu/menu-item",
	"title": "Menu Item",
	"category": "layout",
	"parent": [
		"megamenu/menu",
		"core/group",
		"core/navigation"
	],
	"attributes": {
		"url": {
			"type": "string",
			"default": ""
		},
        "id": {
            "type": "string"
        },
        "kind": {
            "type": "string"
        },
		"text": {
			"type": "string"
		},
		"linkTarget": {
			"type": "string"
		},
		"opensInNewTab": {
			"type": "boolean"
		},
		"rel": {
			"type": "string"
		},
		"dropdownWrapperStyle": {
			"type": "string"
		},
		"parentAttributes": {
			"type": "object",
			"default": {}
		},
		"showDropdown": {
			"type": "boolean"
		}
	},
	"supports": {
		"anchor": true,
		"className": false,
		"color": {
			"gradients": true,
			"heading": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"dimensions": {
			"minHeight": false
		},
		"position": {
			"sticky": true
		},
		"shadow": {
			"__experimentalSkipSerialization": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"__experimentalSelector": ".wp-block-megamenu-item"
	},
	"editorScript": "file:./index.js",
	"style": "file:./style-index.css"
}
